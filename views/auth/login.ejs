<md-content layout-padding>
  <% if (errors) {%>
    <% errors.forEach(function (error) { %>
      <%= __(error) %>
    <% }) %>
  <% } %>
 
  <form role="form" action="/auth/local" method="post">
    <div layout layout-sm="column">
      <md-input-container>
        <label>Username or Email</label>
        <input name="identifier">
      </md-input-container>
      <md-input-container>
        <label>Password</label>
        <input type="password" name="password" placeholder="Password">
      </md-input-container>
    </div>
    <div layout="row">
      <button type="submit" class="md-button md-raised">Sign in</button>
      <a href="/register" class="md-button md-raised">Register</a>
    </div>
  </form>

  <% if (Object.keys(providers).length) {%>
    <h4>You can also use one of these...</h4>

    <% Object.keys(providers).forEach(function (key) { %>
      <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
    <% }) %>
  <% } %>
</md-content>